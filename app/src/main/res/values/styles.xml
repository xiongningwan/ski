    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/ski_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--底部弹框 样式-->
    <style name="no_background" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/ski_transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/ski_transparent</item>
        <item name="android:windowAnimationStyle">@style/fromBottomToUp</item>
    </style>

    <style name="fromBottomToUp" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/ski_enter_translate_dialog</item>
        <item name="android:windowExitAnimation">@anim/ski_exit_translate_dialog</item>
    </style>

