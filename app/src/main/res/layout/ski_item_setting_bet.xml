<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_to_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bt_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_40"
        android:layout_marginTop="@dimen/ski_dp_5"
        android:layout_marginBottom="@dimen/ski_dp_5"
        android:background="@drawable/ski_selector_trend_item_game"
        android:button="@null"
        android:gravity="center"
        android:paddingLeft="@dimen/ski_dp_16"
        android:paddingRight="@dimen/ski_dp_16"
        android:textColor="@color/ski_color_trend_game_text"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="明白了9998" />

    <ImageView
        android:id="@+id/iv_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ski_interval_y"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/ski_dp_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>