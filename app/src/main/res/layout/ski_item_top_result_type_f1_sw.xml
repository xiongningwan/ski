<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:background="@color/ski_color_A86A91">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="33dp" />

    <ImageView
        android:id="@+id/iv_num_1"
        style="@style/Top_result_lottery_style_k3"
        tools:src="@mipmap/touzi1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_num_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="14dp" />

    <ImageView
        android:id="@+id/iv_num_2"
        style="@style/Top_result_lottery_style_k3"
        tools:src="@mipmap/touzi2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_num_1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_num_3"
        style="@style/Top_result_lottery_style_k3"
        tools:src="@mipmap/touzi3"
        app:layout_constraintStart_toEndOf="@+id/iv_num_2"
        app:layout_constraintTop_toTopOf="@+id/iv_num_1"
        android:layout_marginStart="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>