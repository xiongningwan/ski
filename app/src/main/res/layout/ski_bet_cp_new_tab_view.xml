<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ski_dp_40"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bet_d"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ski_bet_tab_bg_selector"
            android:gravity="center"
            android:text="投注"
            android:textColor="@color/ski_bet_tab_text_color" />


        <TextView
            android:id="@+id/tv_bet_s"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ski_bet_tab_bg_selector"
            android:gravity="center"
            android:text="路子图"
            android:textColor="@color/ski_bet_tab_text_color" />



        <TextView
            android:id="@+id/tv_road"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ski_bet_tab_bg_selector"
            android:gravity="center"
            android:text="长龙"
            android:textColor="@color/ski_bet_tab_text_color" />


        
        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/ski_bet_tab_bg_selector">
                <TextView
                    android:id="@+id/tv_dragon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="投注记录"
                    android:textColor="@color/ski_bet_tab_text_color" />


                <TextView
                    android:id="@+id/tv_unpaid_num"
                    android:layout_width="@dimen/ski_dp_16"
                    android:layout_height="@dimen/ski_dp_16"
                    android:layout_toRightOf="@+id/tv_dragon"
                    android:background="@drawable/ski_cicle_red_20dp"
                    android:gravity="center"
                    tools:text="5"
                    android:textColor="@color/ski_white"
                    android:textSize="10dp"
                    android:padding="1dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
        </RelativeLayout>

       
</LinearLayout>