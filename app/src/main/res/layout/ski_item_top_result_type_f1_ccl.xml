<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <ImageView
        android:id="@+id/tv_num_1"
        style="@style/Top_result_lottery_style_ssc"
        tools:text="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_num_2"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/tv_num_2"
        style="@style/Top_result_lottery_style_ssc"
        tools:text="0"
        app:layout_constraintTop_toTopOf="@+id/tv_num_1"
        app:layout_constraintEnd_toStartOf="@+id/tv_num_3"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/tv_num_3"
        style="@style/Top_result_lottery_style_ssc"
        tools:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_num_1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/tv_num_4"
        style="@style/Top_result_lottery_style_ssc"
        tools:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_num_3"
        app:layout_constraintTop_toTopOf="@+id/tv_num_1"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/tv_num_5"
        style="@style/Top_result_lottery_style_ssc"
        tools:text="0"
        app:layout_constraintStart_toEndOf="@+id/tv_num_4"
        app:layout_constraintTop_toTopOf="@+id/tv_num_1"
        android:layout_marginStart="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>