<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ski_color_FAFAFA"
    android:orientation="vertical">

    <com.ski.box.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sk极速飞艇"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_666666"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="200166-244 期"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/ski_color_999999"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/ski_white">

        <com.ski.box.view.view.LotteryResultView
            android:id="@+id/lottery_result_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待开奖中......"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/ski_color_777777"
            android:textSize="20dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/ski_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="会员账号"
            android:textColor="@color/ski_color_999999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_user_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="second001" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="奖金返点"
            android:textColor="@color/ski_color_999999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_rebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_rebate"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1950" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注单编号"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1307308953792680030"
            app:layout_constraintStart_toEndOf="@+id/tv_label_no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"/>

        <com.ski.box.view.view.CusButton
            android:id="@+id/btn_copy"
            android:layout_width="55dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="复制"
            android:background="@drawable/ski_bg_record_copy_selector"
            android:textColor="@color/ski_white"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="投注时间"
            android:textColor="@color/ski_color_999999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_time"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020-01-01 23:33:55" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注玩法"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="冠军大小"
            app:layout_constraintStart_toEndOf="@+id/tv_label_play"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/ski_white"
        android:layout_marginTop="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ski_white">

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注内容"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="大"
            app:layout_constraintStart_toEndOf="@+id/tv_label_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/ski_color_333333"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/ski_white"
        android:layout_marginBottom="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_bet_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投注金额"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_bet_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.00 元"
            app:layout_constraintStart_toEndOf="@+id/tv_label_bet_money"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赔       率"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1.960"
            app:layout_constraintStart_toEndOf="@+id/tv_label_rate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_bet_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖       金"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_bet_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="- / -"
            app:layout_constraintStart_toEndOf="@+id/tv_label_bet_win"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/ski_white">
        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_label_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状       态"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_999999"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_value_status"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            tools:text="待开奖"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/ski_bg_record_detail_status_5"
            app:layout_constraintStart_toEndOf="@+id/tv_label_status"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/ski_color_333333"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="32dp"
        android:background="@mipmap/icon_btn_bg_logout"
        android:text="撤单"
        android:textColor="@color/ski_white"
        android:textSize="16dp"
        android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
