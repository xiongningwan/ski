<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/ski_dp_14"
    android:layout_height="@dimen/ski_dp_270"
    android:id="@+id/view_01"
    app:layout_constraintBottom_toTopOf="@+id/cl_bet"
    app:layout_constraintTop_toBottomOf="@+id/tv_available_money"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_1"
        android:background="@color/ski_color_eaf0fb" />

    <RelativeLayout
        android:background="@color/ski_white"
        android:id="@+id/rlDown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_43">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ski_dp_12"
            android:src="@mipmap/ski_icon_down" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_7"
        android:background="@color/ski_color_d0d3d9" />

    <LinearLayout
        android:background="@color/ski_color_d0d3d9"
        android:paddingLeft="@dimen/ski_dp_14"
        android:paddingRight="@dimen/ski_dp_14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_01"
            android:text="1"
            style="@style/fastBetTextView" />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView

            android:id="@+id/tv_02"
            android:text="2"
            style="@style/fastBetTextView" />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView
            android:id="@+id/tv_03"
            android:text="3"
            style="@style/fastBetTextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_7"
        android:background="@color/ski_color_d0d3d9" />

    <LinearLayout
        android:background="@color/ski_color_d0d3d9"
        android:paddingLeft="@dimen/ski_dp_14"
        android:paddingRight="@dimen/ski_dp_14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_04"
            android:text="4"
            style="@style/fastBetTextView" />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView
            android:id="@+id/tv_05"
            android:text="5"
            style="@style/fastBetTextView" />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView
            android:id="@+id/tv_06"
            android:text="6"
            style="@style/fastBetTextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_7"
        android:background="@color/ski_color_d0d3d9" />

    <LinearLayout
        android:background="@color/ski_color_d0d3d9"
        android:paddingLeft="@dimen/ski_dp_14"
        android:paddingRight="@dimen/ski_dp_14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_07"
            android:text="7"
            style="@style/fastBetTextView" />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView
            android:id="@+id/tv_08"
            android:text="8"
            style="@style/fastBetTextView" />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView
            android:id="@+id/tv_09"
            android:text="9"
            style="@style/fastBetTextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_7"
        android:background="@color/ski_color_d0d3d9" />


    <LinearLayout
        android:background="@color/ski_color_d0d3d9"
        android:paddingLeft="@dimen/ski_dp_14"
        android:paddingRight="@dimen/ski_dp_14"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

       <!-- android:background="#cbd1d9"-->
        <TextView
            android:background="@mipmap/key_hui"
            android:layout_width="@dimen/ski_dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold" />
        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

        <TextView
            android:id="@+id/tv_00"
            android:text="0"
            style="@style/fastBetTextView"
           />

        <View
            android:layout_width="@dimen/ski_dp_7"
            android:layout_height="match_parent"
            android:background="@color/ski_color_d0d3d9" />

       <!-- android:background="#cbd1d9"-->

        <RelativeLayout
            android:background="@mipmap/key_hui"
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/ski_dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ski_keyboard_delete" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ski_dp_7"
        android:background="@color/ski_color_d0d3d9" />

</LinearLayout>
