<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_num_1"
        style="@style/record_result_lottery_style_k3"
        tools:src="@mipmap/touzi1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_num_2"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/iv_num_2"
        style="@style/record_result_lottery_style_k3"
        tools:src="@mipmap/touzi2"
        app:layout_constraintStart_toEndOf="@+id/iv_num_1"
        app:layout_constraintTop_toTopOf="@+id/iv_num_1"
        app:layout_constraintEnd_toStartOf="@+id/iv_num_3"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/iv_num_3"
        style="@style/record_result_lottery_style_k3"
        tools:src="@mipmap/touzi3"
        app:layout_constraintStart_toEndOf="@+id/iv_num_2"
        app:layout_constraintTop_toTopOf="@+id/iv_num_1"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>