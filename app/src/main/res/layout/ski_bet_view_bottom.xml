<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.ski.box.view.view.QuickMoneyView
        android:id="@+id/qm_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_bet"
        android:layout_marginBottom="10dp"/>

    <com.ski.box.view.view.CusTextView
        android:id="@+id/tv_bet_chose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="共0注"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/ski_color_333333"
        app:layout_constraintEnd_toStartOf="@+id/tv_fellow"
        app:layout_constraintStart_toStartOf="@+id/qm_view"
        app:layout_constraintTop_toTopOf="@+id/tv_bet"
        android:layout_marginStart="16dp"/>

    <com.ski.box.view.view.CusTextView
        android:id="@+id/tv_total_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="总金额:32564.45元"
        android:textSize="14dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/ski_color_333333"
        app:layout_constraintEnd_toStartOf="@+id/tv_fellow"
        app:layout_constraintStart_toStartOf="@+id/qm_view"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bet"
        android:layout_marginStart="16dp"/>

    <com.ski.box.view.view.CusTextView
        android:id="@+id/tv_fellow"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:text="追号"
        android:gravity="center"
        android:textColor="@color/ski_white"
        android:background="@color/ski_color_A86A91"
        app:layout_constraintEnd_toStartOf="@+id/tv_bet"
        app:layout_constraintTop_toTopOf="@+id/tv_bet"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bet"
        android:visibility="gone"/>

    <com.ski.box.view.view.CusTextView
        android:id="@+id/tv_bet"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="立即投注"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/ski_white"
        android:background="@color/ski_color_694E85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qm_view"/>




</androidx.constraintlayout.widget.ConstraintLayout>