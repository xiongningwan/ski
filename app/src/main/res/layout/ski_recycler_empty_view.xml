<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ski_white">


    <ImageView
        android:id="@+id/iv_empty_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_empty_view"
        android:src="@mipmap/ski_ic_no_data" />

    <com.ski.box.view.view.CusTextView
        android:id="@+id/tv_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/ski_color_666666"
        android:textSize="14dp"
        android:text="暂无数据" />

</RelativeLayout>