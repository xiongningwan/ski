<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/ski_color_efefef" />


   <Button
       android:id="@+id/btn_sure"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="32dp"
       android:layout_marginBottom="10dp"
       android:layout_marginEnd="16dp"
       android:background="@drawable/ski_bg_bank_card_add_btn"
       android:text="+添加银行卡"
       android:textColor="@color/ski_color_444444"
       android:textSize="16dp" />

   <TextView
       android:id="@+id/tv_label_tip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/ski_warm_tip"
       android:textColor="@color/ski_color_333333"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="32dp"/>

   <TextView
       android:id="@+id/tv_tip_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/ski_my_bank_card_tip_1"
       android:textColor="@color/ski_color_999999"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="16dp"/>
   <TextView
       android:id="@+id/tv_tip_2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/ski_my_bank_card_tip_2"
       android:textColor="@color/ski_color_999999"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"/>
   <TextView
       android:id="@+id/tv_tip_3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/ski_my_bank_card_tip_3"
       android:textColor="@color/ski_color_999999"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"/>
   <TextView
       android:id="@+id/tv_tip_4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/ski_my_bank_card_tip_4"
       android:textColor="@color/ski_color_999999"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp" />
   <TextView
       android:id="@+id/tv_tip_5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/ski_my_bank_card_tip_5"
       android:textColor="@color/ski_color_999999"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginBottom="16dp"/>
</LinearLayout>
