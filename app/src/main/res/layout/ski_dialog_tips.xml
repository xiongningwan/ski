<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ski_bg_fillet"
    android:gravity="center"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tips"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ski_dp_80"
            android:layout_marginLeft="@dimen/ski_dp_14"
            android:layout_marginRight="@dimen/ski_dp_14"
            android:gravity="center"
            android:text="您确定撤销订单吗?"
            android:lineSpacingExtra="@dimen/ski_dp_14"
            android:textColor="@color/ski_color_666666"
            android:textSize="12dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="@dimen/ski_dp_29">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancle"
                android:layout_width="@dimen/ski_dp_76"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/ski_color_8590ae"
                android:background="@drawable/ski_pub_bg_gradient_normal_2"
                android:textSize="14dp" />



            <TextView
                android:background="@drawable/ski_pub_bg_setting_trend"
                android:layout_marginLeft="@dimen/ski_dp_20"
                android:id="@+id/tvCheDan"
                android:layout_width="@dimen/ski_dp_76"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="撤单"
                android:textColor="@color/ski_white"
                android:textSize="14dp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>