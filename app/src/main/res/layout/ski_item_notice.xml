<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/ski_white">

   <View
       android:id="@+id/view_line"
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:background="@color/ski_color_FAFAFA"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"/>


   <TextView
       android:id="@+id/tv_title"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       tools:text="king10"
       android:textColor="@color/ski_color_333333"
       android:textSize="12dp"
       android:layout_marginStart="16dp"
       android:layout_marginTop="10dp"
       android:paddingEnd="5dp"
       app:layout_constraintTop_toBottomOf="@+id/view_line"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/tv_time"/>

   <View
       android:id="@+id/view_line_dv"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/ski_default_line"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_title"
       android:layout_marginTop="10dp"
       android:visibility="gone"/>

   <TextView
       android:id="@+id/tv_content"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       tools:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddd"
       android:textColor="@color/ski_color_333333"
       android:textSize="14dp"
       android:layout_marginStart="16dp"
       android:layout_marginEnd="16dp"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@+id/view_line_dv"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:visibility="gone"/>

   <TextView
       android:id="@+id/tv_time"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:text="king10"
       android:textColor="@color/ski_color_666666"
       android:textSize="12dp"
       android:layout_marginEnd="16dp"
       app:layout_constraintTop_toTopOf="@+id/tv_title"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
