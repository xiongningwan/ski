<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pic_page"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ski_dp_54"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="@dimen/ski_dp_54"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:background="@mipmap/ski_update_dialog_back"
    android:padding="20dp">

    <com.ski.box.view.view.CusTextView
        android:layout_marginTop="@dimen/ski_dp_20"
        android:textSize="17dp"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="发现新版本"
        android:gravity="center"
        android:textColor="@color/ski_white"/>

   <ScrollView
       android:layout_marginLeft="@dimen/ski_dp_51"
       android:layout_marginRight="@dimen/ski_dp_51"
       android:layout_marginTop="@dimen/ski_dp_86"
       android:id="@+id/sl_content"
       android:layout_width="match_parent"
       android:layout_height="@dimen/ski_dp_74">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <com.ski.box.view.view.CusTextView
               android:textSize="@dimen/ski_dp_12"
               android:textColor="#666666"
               android:layout_gravity="center"
               android:id="@+id/tv_update_info"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:lineSpacingExtra="5dp"
               tools:text="1、xxxxxxxx\n2、ooooooooo" />
       </LinearLayout>
   </ScrollView>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ski_dp_24">

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:gravity="center"
            android:background="@mipmap/ski_update_cancel_back"
            android:textColor="@color/ski_555555_white_text_color"
            android:textSize="14dp"
            android:visibility="visible"/>

        <View
            android:id="@+id/view_space"
            android:layout_width="@dimen/ski_dp_16"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即更新"
            android:gravity="center"
            android:textSize="14dp"
            android:background="@mipmap/ski_update_now_back"
            android:textColor="@color/ski_update_white_555555_text_color"/>

    </LinearLayout>
</LinearLayout>


