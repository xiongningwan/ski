<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:background="@color/ski_color_A86A91">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <FrameLayout
        android:id="@+id/fl_num_1"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fl_num_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_1"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="1" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_1"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_num_2"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toEndOf="@+id/fl_num_1"
        app:layout_constraintEnd_toStartOf="@+id/fl_num_3"
        app:layout_constraintTop_toTopOf="@+id/fl_num_1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_2"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="2" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_2"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_num_3"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toEndOf="@+id/fl_num_2"
        app:layout_constraintEnd_toStartOf="@+id/fl_num_4"
        app:layout_constraintTop_toTopOf="@+id/fl_num_1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_3"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="3" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_3"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_num_4"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toEndOf="@+id/fl_num_3"
        app:layout_constraintEnd_toStartOf="@+id/fl_num_5"
        app:layout_constraintTop_toTopOf="@+id/fl_num_1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_4"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="4" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_4"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_num_5"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toEndOf="@+id/fl_num_4"
        app:layout_constraintEnd_toStartOf="@+id/fl_num_6"
        app:layout_constraintTop_toTopOf="@+id/fl_num_1"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_5"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="5" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_5"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_num_6"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toEndOf="@+id/fl_num_5"
        app:layout_constraintEnd_toStartOf="@+id/fl_num_7"
        app:layout_constraintTop_toTopOf="@+id/fl_num_1"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_6"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="6" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_6"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_num_7"
        style="@style/Top_result_lottery_style_lhc_fl"
        app:layout_constraintStart_toEndOf="@+id/fl_num_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fl_num_1">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_num_7"
            style="@style/Top_result_lottery_style_lhc_num"
            tools:text="7" />

        <com.ski.box.view.view.CusTextView
            android:id="@+id/tv_sx_7"
            style="@style/Top_result_lottery_style_lhc_sx"
            tools:text="牛" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>