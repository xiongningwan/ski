<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ski_bg_gradient_blue_bank_card">
            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="招商银行"
                android:textColor="@color/ski_white"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/tv_bank_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="6225 **** **** **** 253"
                android:textColor="@color/ski_white"
                android:textSize="19dp"
                app:layout_constraintStart_toStartOf="@+id/tv_bank_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_name"
                android:layout_marginTop="16dp"/>

            <com.ski.box.view.view.CusTextView
                android:id="@+id/tv_label_bank_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="持  卡  人"
                android:textColor="@color/ski_white"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tv_bank_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_no"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tv_label_bank_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生效时间"
                android:textColor="@color/ski_white"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tv_bank_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_bank_owner"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tv_value_bank_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="曹**"
                android:textColor="@color/ski_white"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/tv_label_bank_owner"
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_no"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"/>

            <TextView
                android:id="@+id/tv_value_bank_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2020-10-26 16:16:16"
                android:textColor="@color/ski_white"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/tv_label_bank_time"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_bank_owner"
                android:layout_marginTop="10dp"
                android:layout_marginStart="32dp"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


